<% content_for :title, 'Presentations' %>
<h1>Presentations</h1>

<div class='col-md-6 col-md-offset-3'>
  <ul class='list-group'>
    <% @presentations.each do |p| %>
      <%= link_to p.name, p, class: 'list-group-item list-group-item-action' %>
    <% end %>
  </ul>

  <% if privileged? %>
    <%= link_to 'Create new Presentation', new_presentation_path, class: 'btn btn-primary btn-sm' %>
  <% end %>
</div>
