<% content_for :title, 'Users' %>
<h1>Edit User Info</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <%= render 'shared/error_messages', model: @user %>

    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.radio_button :privileged, false %>
    <%= f.label :privileged_false, 'Student' %>
    <%= f.radio_button :privileged, true %>
    <%= f.label :privileged_true, 'Instructor' %><br>
    <%= f.label :full_name %>
    <%= f.text_field :name %><br>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active_true, 'Active' %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active_false, 'Inactive' %><br>
    <%= f.submit 'Submit Edits' %>

<% end %>
