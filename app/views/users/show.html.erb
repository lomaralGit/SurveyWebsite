<% content_for :title, 'Users' %>
<div class='user-info'>

    <h1> User Info </h1>
    <table class='table table-striped table-dark'>
        <tr>
            <th width=10%>Name:</th>
            <td width=30%><%= @user.name %></td>
        </tr>
        <tr>
            <th>Instructor:</th>
            <td><%= @user.privileged %></td>
        </tr>
        <tr>
            <th>Email:</th>
            <td><%= @user.email %></td>
        </tr>
        <tr>
            <th>Username:</th>
            <td><%= @user.username %></td>
        </tr>
        <tr>
            <th>Id:</th>
            <td><%= @user.id %></td>
        </tr>
        <tr>
            <th>Active:</th>
            <td><%= @user.is_active %></td>
        </tr>
    </table>
    <br>
    <%= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-primary btn-sm' %>
    <br>
    <br>
    <%= link_to 'Return to Class Roster', '/users', class: 'btn btn-primary btn-sm' %>
    <br><br>
    <div class='alert alert-info' role='alert'>
        Note: To remove a user from the class, edit them to inactive.
    </div>

</div>
